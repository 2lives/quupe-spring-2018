{
    "extends": ["eslint-plugin-graphql", "eslint-plugin-node"],
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true
    },
    "plugins": ["import", "graphql", "node"],
    "rules": {
        "indent": ["error", 4],
        "max-len": 0,
        "global-require": 0,
        "arrow-parens": 0,
        "no-case-declarations": 0,
        "no-param-reassign": 1,
        "comma-dangle": 0,
        "import/no-named-as-default": 0,
        "import/prefer-default-export": 1
    }
}
